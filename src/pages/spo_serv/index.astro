---
import Layout from "@/layouts/Layout.astro";
import { SITE_TITLE } from "@/const";
---

<Layout title={`Акции сервиса | ${SITE_TITLE}`} image="/img/banners/2023_10_30-new_0.webp">
	<h1>Акции сервиса</h1>
	<h3>Уважаемые клиенты!</h3>
	<p>
		Предлагаем вам ознакомиться с акциями сервиса дилерских центров компании
		Самарские автомобили:
	</p>

	<div
		class="mb-5 grid grid-cols-2 sm:grid-cols-3 xl:grid-cols-5 gap-4 text-xs sm:text-base"
	>
		<a
			href="https://www.landroversamara.ru/ownership/owner/special-programs/"
			class="text-gray-800 flex flex-col items-center text-center underline hover:no-underline"
			target="_blank"
		>
			<img
				src="/img/pages/spo_serv/land-rover.webp"
				alt="Для владельцев Land Rover"
				class="mb-2 w-full"
			/>
			<b class="">Для владельцев Land&nbsp;Rover</b>
		</a>
		<a
			href="https://www.jaguarsamara.ru/ownership/for-owner/service-special-programs/"
			class="text-gray-800 flex flex-col items-center text-center underline hover:no-underline"
			target="_blank"
		>
			<img
				src="/img/pages/spo_serv/jaguar.webp"
				alt="Для владельцев Jaguar"
				class="mb-2 w-full"
			/>
			<b class="">Для владельцев Jaguar</b>
		</a>
		<a
			href="https://nissansamara.ru/owners/carcare-specials/"
			class="text-gray-800 flex flex-col items-center text-center underline hover:no-underline"
			target="_blank"
		>
			<img
				src="/img/pages/spo_serv/nissan.webp"
				alt="Для владельцев Nissan"
				class="mb-2 w-full"
			/>
			<b class="">Для владельцев Nissan</b>
		</a>
		<a
			href="https://infiniti-samauto.ru/owners/service-specials/"
			class="text-gray-800 flex flex-col items-center text-center underline hover:no-underline"
			target="_blank"
		>
			<img
				src="/img/pages/spo_serv/infiniti.webp"
				alt="Для владельцев INFINITI"
				class="mb-2 w-full"
			/>
			<b class="">Для владельцев INFINITI</b>
		</a>
		<a
			href="https://moskvich-samauto.ru/owners/accessories/"
			class="text-gray-800 flex flex-col items-center text-center underline hover:no-underline"
			target="_blank"
		>
			<img
				src="/img/pages/spo_serv/moskvich.webp"
				alt="Для владельцев Москвич"
				class="mb-2 w-full"
			/>
			<b class="">Для владельцев Москвич</b>
		</a>
	</div>
</Layout>
